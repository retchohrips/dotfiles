function log_red
  echo -e (set_color red)"$argv"(set_color normal)
end

function log_blue
  echo -e (set_color blue)"$argv"(set_color normal)
end

function log_green
  echo -e (set_color green)"$argv"(set_color normal)
end

function log_yellow
  echo -e (set_color yellow)"$argv"(set_color normal)
end

function log_task
  log_blue "üîÉ" "$argv"
end

function log_manual_action
  log_red "‚ö†Ô∏è" "$argv"
end

function log_c
  log_yellow "üëâ" "$argv"
end

function c
  log_c "$argv"
  "$argv"
end

function c_exec
  log_c "$argv"
  exec "$argv"
end

function log_error
  log_red "‚ùå" "$argv"
end

function log_info
  log_blue "‚ÑπÔ∏è" "$argv"
end

function error
  log_error "$argv"
  exit 1
end
