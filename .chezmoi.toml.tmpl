{{- $device_type := "desktop" -}}
{{- if eq .chezmoi.os "linux" -}}
{{-     if eq (output "hostnamectl" "--json=short" | mustFromJson).Chassis "laptop" "convertible" -}}
{{-       $device_type = "laptop" -}}
{{-     end -}}
{{- else if eq .chezmoi.os "android" -}}
{{-   $device_type = "phone" -}}
{{- end -}}

{{- $osID := .chezmoi.os -}}
{{- if (and (eq .chezmoi.os "linux") (hasKey .chezmoi.osRelease "id")) -}}
{{-   $osID = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

{{- $blue := false -}}
{{- if (and (eq .chezmoi.os "linux") (hasKey .chezmoi.osRelease "variantID")) -}}
{{-   if (or (.chezmoi.osRelease.variantID | lower | contains "bazzite") (.chezmoi.osRelease.variantID | lower | contains "bluefin")) }}
{{-     $blue = true -}}
{{-   end -}}
{{- end -}}

{{ $passphrase := promptStringOnce . "passphrase" "passphrase" -}}

color = "on"
pager = "less"
encryption = "gpg"

[diff]
command = "difft"
args = ["--color", "always", "--missing-as-empty", "--skip-unchanged"]
pager = "less -RF"
exclude = ["scripts"]
reverse = false

[edit]
{{- if lookPath "hx" }}
command = "hx"
{{- else }}
command = "vi"
{{- end }}

[status]
exclude = ["scripts"]

[data]
osID = {{ $osID | quote }}
blue = {{ $blue }}
de = {{ (env "XDG_CURRENT_DESKTOP" | trim | lower | quote) }}
device_type = {{ $device_type | lower | quote }}
server = {{ eq $osID "linux-debian" }}
passhprase = {{ $passphrase | quote }}

[gpg]
symmetric = true
args = ["--batch", "--passphrase", {{ $passphrase | quote }}, "--no-symkey-cache", "--quiet"]

[github]
refreshPeriod = "12h"
